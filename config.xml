<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova2" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BikeBuddy</name>
    
    <description>
        Bike Pooling App.
    </description>
    
    <author email="singhkunal2051@gmail.com" href="http://bikebuddy.netlify.com">
        BB Team
    </author>
    
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
	</platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
    <icon src="img/justlogo.png" />
    
    <!-- FOR SPLASH SCREEN 3secs -->

    <preference name = "SplashScreen" value = "screen" />
    <preference name = "SplashScreenDelay" value = "3000" />
    <preference name = "SplashMaintainAspectRatio" value = "true" />
    <splash src="img/bb_splash.jpg"/>


</widget>
